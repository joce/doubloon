# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md, markdown}]
trim_trailing_whitespace = false

[*.py]
profile = black
max_line_length = 88

[*.{yml, yaml}]
indent_size = 2
